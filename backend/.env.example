# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# CORS Configuration (comma-separated list of allowed origins)
# Example: CORS_ORIGINS=https://myapp.fly.dev,https://myapp.com
CORS_ORIGINS=

# Database Configuration
# For Fly.io, use: postgres://user:password@appname-db.internal:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleetguard
DB_USER=postgres
DB_PASSWORD=postgres

# GraphHopper API (for routing)
GRAPHHOPPER_API_KEY=YOUR_GRAPHOPPER_API_KEY_HERE

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Off-route detection configuration
OFF_ROUTE_DISTANCE_M=50
OFF_ROUTE_STRIKES=3
DEBUG_OFF_ROUTE=false

# WebSocket heartbeat configuration
WS_PING_INTERVAL_MS=20000
WS_PING_GRACE_MULTIPLIER=2

# Broadcast throttling configuration
POSITION_BROADCAST_MAX_PER_SEC=5
